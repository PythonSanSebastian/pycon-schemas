{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://pycon.org/participant.json",
  "title": "Participant",
  "description": "A schema for a public view of a participant",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "The participant's full name",
      "default": "",
      "examples": [
        "Jean Doe"
      ],
      "pattern": "^(.*)$"
    },
    "biography": {
      "type": "string",
      "title": "The participant's short biography",
      "default": "",
      "examples": [
        "Jean is a great person"
      ],
      "pattern": "^(.*)$"
    },
    "homepage": {
      "type": "string",
      "title": "The participant's home page URL",
      "default": "",
      "examples": [
        ""
      ],
      "pattern": "^http[s]?://(.*)$"
    },
    "profile_picture": {
      "type": "string",
      "title": "The path or url to a profile image",
      "default": "",
      "examples": [
        "static/profiles/participant.png"
      ]
    },
    "affiliation": {
      "type": "string",
      "title": "The participant's affiliation",
      "default": "",
      "examples": [
        "Amazing Company Ltd."
      ]
    },
    "twitter": {
      "type": "null",
      "title": "The participant's twitter handle",
      "default": "string",
      "examples": [
        "@johndoe"
      ],
      "pattern": "^@(.*)$"
    }
  }
}
